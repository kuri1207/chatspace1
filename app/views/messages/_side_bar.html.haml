.body
  .chat__side
    .side__header
      .side__header__box
        %p.side__header__box__user-name
          = current_user.name
        %ul.side__header__box__menu
          %li.side__header__box__menu__new-group
            = link_to new_group_path do
              %i.fa.fa-edit
          %li.side__header__box__menu__edit-user
            = link_to edit_user_path(current_user.id) do
              = icon('fas', 'cog', class: 'icon')
            -# = link_to "/users/21936/edit" do
            -#   %i.fa.fa-cog
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            %p.group__group-name
              = group.name
            %p.group__latest-message
              = group.show_last_message
